<Window x:Class="Presentation.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Login" Height="420" Width="360"
        WindowStartupLocation="CenterScreen"
        Background="#f9f9f9">

    <Window.Resources>
        <!-- Header label -->
        <Style x:Key="HeaderLabelStyle" TargetType="Label">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#2c3e50"/>
        </Style>
        <DropShadowEffect x:Key="DropShadowEffect"
                  BlurRadius="8"
                  ShadowDepth="2"
                  Opacity="0.3"
                  Color="Black"/>

        <!-- Sub label -->
        <Style x:Key="SmallLabelStyle" TargetType="Label">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#7f8c8d"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
        </Style>

        <!-- Input boxes -->
        <Style x:Key="InputBoxStyle" TargetType="Control">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Width" Value="260"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="0,4,0,12"/>
            <Setter Property="Padding" Value="8,2"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#bdc3c7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <!-- Login button -->
        <Style x:Key="LoginButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Width" Value="260"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Background" Value="#3498db"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderBrush" Value="#2980b9"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980b9"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1c5980"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border CornerRadius="10" Background="White" Padding="20" Margin="20" Effect="{DynamicResource DropShadowEffect}">
        <StackPanel VerticalAlignment="Center">
            <Label Content="Login Account" Style="{StaticResource HeaderLabelStyle}"/>

            <Label Content="Username" Style="{StaticResource SmallLabelStyle}"/>
            <TextBox x:Name="txtUsername" Style="{StaticResource InputBoxStyle}" Height="25" />

            <Label Content="Password" Style="{StaticResource SmallLabelStyle}"/>
            <PasswordBox x:Name="txtPassword" Style="{StaticResource InputBoxStyle}" Height="25
                         "/>

            <Button Content="Login" Style="{StaticResource LoginButtonStyle}" Click="btnLogin_Click"/>
        </StackPanel>
    </Border>
</Window>
