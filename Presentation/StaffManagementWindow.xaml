<Window x:Class="Presentation.StaffManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentation"
        mc:Ignorable="d"
        Title="Staff Management"
        Width="850"
        MinHeight="480"
        SizeToContent="Height"
        WindowStartupLocation="CenterScreen"
        Background="#f0f0f0" Loaded="Window_Loaded">

    <!-- ========== Styles (reused from TicketManagement) ========== -->
    <Window.Resources>
        <Style x:Key="SectionLabelStyle" TargetType="Label">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Times New Roman"/>
            <Setter Property="Foreground" Value="#2c3e50"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <Style x:Key="FormLabelStyle" TargetType="Label">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
        </Style>

        <Style x:Key="InputBoxStyle" TargetType="Control">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="26"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#ccc"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Width" Value="200"/>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="8,4,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- ========== Layout ========== -->
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ===== Topbar ===== -->
        <DockPanel Height="45" Background="White" LastChildFill="False" VerticalAlignment="Top" Margin="0,0,0,10">
            <Label Content="Staff Management" Style="{StaticResource SectionLabelStyle}" Margin="20,10,0,0"/>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" Margin="0,5,10,0">
                <Image Width="32" Height="32" Source="C:\Users\HP\OneDrive - Office 365 A1\Desktop\MetroTicketApplication\MetroTicketApplication\Presentation\assets\businessman.png"/>
                <Label Content="Welcome, Admin!" VerticalAlignment="Center"/>
            </StackPanel>
        </DockPanel>

        <!-- ===== Main content ===== -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- ==== Left: Form ==== -->
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <Label Content="Fill Staff Information" Style="{StaticResource SectionLabelStyle}"/>

                    <Label Content="Username:" Style="{StaticResource FormLabelStyle}"/>
                    <TextBox x:Name="txtUsername" Style="{StaticResource InputBoxStyle}"/>

                    <Label Content="Password:" Style="{StaticResource FormLabelStyle}"/>
                    <PasswordBox x:Name="txtPassword" Style="{StaticResource InputBoxStyle}"/>

                    <Label Content="Email:" Style="{StaticResource FormLabelStyle}"/>
                    <TextBox x:Name="txtEmail" Style="{StaticResource InputBoxStyle}"/>

                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="btnAdd" Content="Add" Background="#27ae60" Style="{StaticResource PrimaryButtonStyle}" Click="btnAdd_Click"/>
                        <Button x:Name="btnUpdate" Content="Update" Background="#f1c40f" Style="{StaticResource PrimaryButtonStyle}" Click="btnUpdate_Click"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="btnDelete" Content="Delete" Background="#e74c3c" Style="{StaticResource PrimaryButtonStyle}" Click="btnDelete_Click"/>
                        <Button x:Name="btnClear" Content="Clear" Background="#3498db" Style="{StaticResource PrimaryButtonStyle}" Click="btnClear_Click"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>

            <!-- ==== Right: DataGrid ==== -->
            <StackPanel Grid.Column="2">
                <Label Content="Staff List" Style="{StaticResource SectionLabelStyle}"/>
                <DataGrid x:Name="dtgAllStaff"
                          AutoGenerateColumns="False"
                          Height="320"
                          HorizontalAlignment="Stretch"
                          HeadersVisibility="Column"
                          CanUserAddRows="False"
                          Margin="0,0,0,10" SelectionChanged="dtgAllStaff_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="*"/>
                        <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                    </DataGrid.Columns>
                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#2ecc71"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Padding" Value="6"/>
                        </Style>
                    </DataGrid.Resources>
                </DataGrid>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
